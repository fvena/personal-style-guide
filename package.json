{
  "name": "style-guide",
  "version": "0.1.0",
  "description": "A shared configuration for ESLint, Prettier, and Stylelint to ensure consistent and clean code across your projects.",
  "type": "module",
  "files": [
    "eslint",
    "prettier",
    "stylelint"
  ],
  "exports": {
    "./eslint/*": "./eslint/*.js",
    "./prettier/*": "./prettier/index.js",
    "./stylelint/*": "./stylelint/index.js"
  },
  "scripts": {
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "prepare": "husky",
    "release": "release-it --only-version",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "*": "prettier -w --ignore-unknown",
    "*.{js,ts}": "eslint --fix"
  },
  "keywords": [
    "ESLint",
    "Prettier",
    "Stylelint",
    "Typescript",
    "Style",
    "Guide"
  ],
  "license": "MIT",
  "homepage": "https://github.com/fvena/style-guide#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fvena/style-guide.git"
  },
  "bugs": {
    "url": "https://github.com/fvena/style-guide/issues"
  },
  "author": "Francisco Vena <fvena32@gmail.com> (https://www.fvena.com)",
  "engines": {
    "node": ">=22.11.0"
  },
  "dependencies": {
    "@eslint/js": "^9.16.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import-x": "^4.5.0",
    "eslint-plugin-n": "^17.14.0",
    "eslint-plugin-perfectionist": "^4.2.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "globals": "^15.13.0",
    "typescript-eslint": "^8.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@release-it/conventional-changelog": "^9.0.3",
    "eslint": "^9.16.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "release-it": "^17.10.0",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "stylelint": "^16.0.0"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    },
    "prettier": {
      "optional": true
    },
    "stylelint": {
      "optional": true
    }
  }
}
